  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"],
        "accessToken": "ZTRiOTI3NjAtNTUxMi00NGZkLTljY2ItYTdkMWE2MWM5ODJjfHJlYWQtd3JpdGU="
      }
